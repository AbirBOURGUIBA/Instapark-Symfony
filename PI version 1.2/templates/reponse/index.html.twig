            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



                            </div>
                        </div>
                    </div>
                    <a href="{{ path('reponse_new') }}"style="float: right;">Créer une réponse</a>
                </div>
            </div>
        </div>

    </div>


{% endblock %}









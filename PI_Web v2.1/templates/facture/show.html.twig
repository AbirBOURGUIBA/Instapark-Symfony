{% extends'baseBack.html.twig' %}
{% block body %}

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Liste des factures</h5>
                        <div class="table-responsive">
                            <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>Nbr heure</th>
                <td>{{ facture.nbrheure }}</td>
            </tr>
            <tr>
                <th>Prix unitaire</th>
                <td>{{ facture.prixunitaire }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ facture.total }}</td>
            </tr>
            <tr>
                <th>Date entrer</th>
                <td>{{ facture.dateentrer ? facture.dateentrer|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_facture') }}">Liste des factures</a>

    <a href="{{ path('app_facture_edit', {'id': facture.id}) }}">Modifier</a>

    {{ include('facture/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
